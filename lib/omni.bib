	note = {Publisher: Public Library of Science},
	keywords = {Data visualization, Database and informatics methods, Gene expression, Gene sequencing, Open source software, Programming languages, Software tools, Source code},
	pages = {e1006245},
	file = {Full Text PDF:/home/almut/Zotero/storage/8MT9Z3FP/Zappia et al. - 2018 - Exploring the single-cell RNA-seq analysis landsca.pdf:application/pdf;Snapshot:/home/almut/Zotero/storage/T7E6IV6G/article.html:text/html},
